            </div>
        </section>
        
        <section id="formulario-adaptativo">
            <h1>(3 Columnas por Defecto)</h1>
            <form class="formulario-reorganizar">
                <div class="grupo-campo"><label for="nombre">Nombre:</label><input type="text" id="nombre"></div>
                <div class="grupo-campo"><label for="email">Email:</label><input type="email" id="email"></div>
                <div class="grupo-campo campo-largo"><label for="mensaje">Mensaje:</label><textarea id="mensaje"></textarea></div>
                <button type="submit">Enviar</button>
            </form>
        </section>

        
